# What If Generator - Test Environment
NODE_ENV=test
APP_NAME=what-if-generator
APP_VERSION=1.0.0

# =============================================================================
# SERVICE PORTS (Fixed Architecture)
# =============================================================================
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
GENERATION_SERVICE_PORT=3002
HISTORY_SERVICE_PORT=3003
SHARING_SERVICE_PORT=3004
VIDEO_SERVICE_PORT=3005
SOCIAL_SERVICE_PORT=3006
FRONTEND_PORT=3007

# =============================================================================
# SERVICE URLs (Test - Internal AWS)
# =============================================================================
USER_SERVICE_URL=http://user-service.whatifgenerator.local:3001
GENERATION_SERVICE_URL=http://generation-service.whatifgenerator.local:3002
HISTORY_SERVICE_URL=http://history-service.whatifgenerator.local:3003
SHARING_SERVICE_URL=http://sharing-service.whatifgenerator.local:3004
VIDEO_SERVICE_URL=http://video-service.whatifgenerator.local:3005
SOCIAL_SERVICE_URL=http://social-service.whatifgenerator.local:3006
FRONTEND_URL=https://test.whatifgenerator.com
REACT_APP_API_URL=https://api-test.whatifgenerator.com
REACT_APP_ENVIRONMENT=test

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
# AWS credentials should be set via IAM roles in ECS

# =============================================================================
# DATABASE CONFIGURATION (AWS)
# =============================================================================
# RDS PostgreSQL
RDS_POSTGRES_HOST=what-if-generator-test-postgres.xxxxx.us-east-1.rds.amazonaws.com
RDS_POSTGRES_PORT=5432
RDS_POSTGRES_DB=what_if_users
RDS_POSTGRES_USER=postgres
# RDS_POSTGRES_PASSWORD should be set via AWS Secrets Manager

# DynamoDB
DYNAMODB_REGION=us-east-1
# No endpoint needed for AWS DynamoDB

# ElastiCache Redis
ELASTICACHE_REDIS_HOST=what-if-generator-test-redis.xxxxx.cache.amazonaws.com
ELASTICACHE_REDIS_PORT=6379
# ELASTICACHE_REDIS_PASSWORD should be set via AWS Secrets Manager

# =============================================================================
# SECURITY (Test - Secure)
# =============================================================================
# JWT_SECRET should be set via AWS Secrets Manager
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# AI PROVIDERS (Test API Keys)
# =============================================================================
AI_PROVIDER=gemini
# API keys should be set via AWS Secrets Manager
# GEMINI_API_KEY=
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# =============================================================================
# VIDEO SERVICE (Test)
# =============================================================================
# GOOGLE_CLOUD_PROJECT_ID should be set via AWS Secrets Manager
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account-key.json
# Video API keys should be set via AWS Secrets Manager

# =============================================================================
# FEATURE FLAGS (Test)
# =============================================================================
ENABLE_VIDEO_GENERATION=true
ENABLE_TTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false
ENABLE_SWAGGER_UI=false
ENABLE_API_DOCS=false
ENABLE_METRICS=true
ENABLE_TRACING=true

# =============================================================================
# RATE LIMITING (Moderate for Test)
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# FILE MANAGEMENT
# =============================================================================
MAX_FILE_SIZE_MB=50
CLEANUP_INTERVAL_HOURS=12
UPLOAD_PATH=/app/uploads
OUTPUT_PATH=/app/outputs

# =============================================================================
# LOGGING (Moderate for Test)
# =============================================================================
LOG_LEVEL=info
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_DIR=/app/logs

# =============================================================================
# CORS (Restricted for Test)
# =============================================================================
CORS_ORIGIN=https://test.whatifgenerator.com
CORS_CREDENTIALS=true
ALLOWED_ORIGINS=https://test.whatifgenerator.com,https://api-test.whatifgenerator.com

# =============================================================================
# SECURITY HEADERS (Enabled for Test)
# =============================================================================
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_NO_SNIFF=true
HELMET_XSS_FILTER=true

# =============================================================================
# HEALTH CHECK
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# CACHE
# =============================================================================
CACHE_TTL=1800
CACHE_MAX_ITEMS=5000

# =============================================================================
# MONITORING (AWS)
# =============================================================================
METRICS_PORT=9090
TRACE_SAMPLE_RATE=0.3
CLOUDWATCH_GROUP=/aws/ecs/what-if-generator-test
CLOUDWATCH_STREAM=what-if-generator-test
XRAY_ENABLED=true
XRAY_SAMPLE_RATE=0.3
CLOUDTRAIL_ENABLED=true

# =============================================================================
# S3 Configuration
# =============================================================================
S3_BUCKET=what-if-generator-test-assets
S3_REGION=us-east-1

# =============================================================================
# CDN
# =============================================================================
CDN_URL=https://test-cdn.whatifgenerator.com
STATIC_ASSETS_URL=https://test-assets.whatifgenerator.com

# =============================================================================
# OAUTH (Test Keys)
# =============================================================================
# OAuth credentials should be set via AWS Secrets Manager
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=

# =============================================================================
# SESSION
# =============================================================================
# SESSION_SECRET should be set via AWS Secrets Manager
SESSION_MAX_AGE=86400000

# =============================================================================
# API DOCUMENTATION (Disabled in Test)
# =============================================================================
API_DOCS_PATH=/api-docs
METRICS_PATH=/metrics

# =============================================================================
# EMAIL (Test SMTP)
# =============================================================================
# Email credentials should be set via AWS Secrets Manager
EMAIL_FROM=noreply@test.whatifgenerator.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587