# What If Generator - Environment Configuration Template
# Copy this file to .env.development, .env.test, or .env.production and update values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_NAME=what-if-generator
APP_VERSION=1.0.0

# =============================================================================
# SERVICE PORTS (Fixed Architecture - DO NOT CHANGE)
# =============================================================================
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
GENERATION_SERVICE_PORT=3002
HISTORY_SERVICE_PORT=3003
SHARING_SERVICE_PORT=3004
VIDEO_SERVICE_PORT=3005
FRONTEND_PORT=3005

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration
POSTGRES_DB=what_if_users
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MongoDB Configuration (Legacy - will be migrated to DynamoDB)
MONGODB_URI=mongodb://admin:admin123@localhost:27017/what_if_history?authSource=admin
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=what_if_history
MONGODB_USER=admin
MONGODB_PASSWORD=admin123

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Credentials (for test/production environments)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# RDS PostgreSQL Configuration (Test/Production)
RDS_POSTGRES_HOST=
RDS_POSTGRES_PORT=5432
RDS_POSTGRES_DB=what_if_users
RDS_POSTGRES_USER=postgres
RDS_POSTGRES_PASSWORD=

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1

# ElastiCache Redis Configuration (Test/Production)
ELASTICACHE_REDIS_HOST=
ELASTICACHE_REDIS_PORT=6379
ELASTICACHE_REDIS_PASSWORD=

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# SERVICE URLs (for microservices communication)
# =============================================================================
USER_SERVICE_URL=http://user-service:3001
GENERATION_SERVICE_URL=http://generation-service:3002
HISTORY_SERVICE_URL=http://history-service:3003
SHARING_SERVICE_URL=http://sharing-service:3004
VIDEO_SERVICE_URL=http://video-service:3005
SOCIAL_SERVICE_URL=http://social-service:3006

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3005
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=development

# =============================================================================
# AI PROVIDERS
# =============================================================================
AI_PROVIDER=gemini
GEMINI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# =============================================================================
# VIDEO SERVICE CONFIGURATION
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=
RUNWAY_API_KEY=
PIKA_API_KEY=
STABILITY_API_KEY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_VIDEO_GENERATION=true
ENABLE_TTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false
ENABLE_SWAGGER_UI=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# FILE MANAGEMENT
# =============================================================================
MAX_FILE_SIZE_MB=50
CLEANUP_INTERVAL_HOURS=24
UPLOAD_PATH=./uploads
OUTPUT_PATH=./outputs

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_DIR=./logs

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3005
CORS_CREDENTIALS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_NO_SNIFF=true
HELMET_XSS_FILTER=true

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
TRACE_SAMPLE_RATE=0.1

# =============================================================================
# S3 CONFIGURATION (Production only)
# =============================================================================
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# =============================================================================
# CLOUDWATCH CONFIGURATION
# =============================================================================
CLOUDWATCH_GROUP=/aws/ecs/what-if-generator
CLOUDWATCH_STREAM=

# =============================================================================
# X-RAY CONFIGURATION
# =============================================================================
XRAY_ENABLED=true
XRAY_SAMPLE_RATE=0.1

# =============================================================================
# CLOUDTRAIL CONFIGURATION
# =============================================================================
CLOUDTRAIL_ENABLED=true

# =============================================================================
# CDN CONFIGURATION (Production only)
# =============================================================================
CDN_URL=
STATIC_ASSETS_URL=