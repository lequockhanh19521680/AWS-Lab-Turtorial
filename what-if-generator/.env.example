# ===========================================
# WHAT IF GENERATOR - ENVIRONMENT TEMPLATE
# ===========================================
# Copy this file to .env and fill in your values

# Application Configuration
NODE_ENV=development
APP_NAME=what-if-generator
APP_VERSION=1.0.0

# Database Configuration
POSTGRES_DB=what_if_users
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
MONGODB_URI=mongodb://admin:admin123@localhost:27017

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Service Ports (DO NOT CHANGE - Fixed Architecture)
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
GENERATION_SERVICE_PORT=3002
HISTORY_SERVICE_PORT=3003
SHARING_SERVICE_PORT=3004
VIDEO_SERVICE_PORT=3005
FRONTEND_PORT=3005

# Service URLs (Development)
USER_SERVICE_URL=http://localhost:3001
GENERATION_SERVICE_URL=http://localhost:3002
HISTORY_SERVICE_URL=http://localhost:3003
SHARING_SERVICE_URL=http://localhost:3004
VIDEO_SERVICE_URL=http://localhost:3005
SOCIAL_SERVICE_URL=http://localhost:3006

# Frontend Configuration
FRONTEND_URL=http://localhost:3005
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=development

# AI Provider Configuration
AI_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Video Service Configuration
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
RUNWAY_API_KEY=your-runway-api-key
PIKA_API_KEY=your-pika-api-key
STABILITY_API_KEY=your-stability-api-key

# Feature Flags
ENABLE_VIDEO_GENERATION=true
ENABLE_TTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Management
MAX_FILE_SIZE_MB=50
CLEANUP_INTERVAL_HOURS=24

# Logging Configuration
LOG_LEVEL=info
LOG_REQUESTS=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3005
CORS_CREDENTIALS=true

# Security Configuration
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_NO_SNIFF=true
HELMET_XSS_FILTER=true