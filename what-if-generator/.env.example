# What If Generator - Environment Configuration Template
# Copy this file to .env.local, .env.development, .env.test, or .env.production
# and fill in the appropriate values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
APP_NAME=what-if-generator
APP_VERSION=1.0.0

# =============================================================================
# SERVICE PORTS (DO NOT CHANGE - Fixed Architecture)
# =============================================================================
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
GENERATION_SERVICE_PORT=3002
HISTORY_SERVICE_PORT=3003
SHARING_SERVICE_PORT=3004
VIDEO_SERVICE_PORT=3005
SOCIAL_SERVICE_PORT=3006
FRONTEND_PORT=3007

# =============================================================================
# SERVICE URLs
# =============================================================================
USER_SERVICE_URL=http://localhost:3001
GENERATION_SERVICE_URL=http://localhost:3002
HISTORY_SERVICE_URL=http://localhost:3003
SHARING_SERVICE_URL=http://localhost:3004
VIDEO_SERVICE_URL=http://localhost:3005
SOCIAL_SERVICE_URL=http://localhost:3006
FRONTEND_URL=http://localhost:3007
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (User Service)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=what_if_users
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# DynamoDB (Other Services)
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1

# Redis (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# AWS CONFIGURATION (Test/Production)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# RDS PostgreSQL (Test/Production)
RDS_POSTGRES_HOST=
RDS_POSTGRES_PORT=5432
RDS_POSTGRES_DB=what_if_users
RDS_POSTGRES_USER=postgres
RDS_POSTGRES_PASSWORD=

# ElastiCache Redis (Test/Production)
ELASTICACHE_REDIS_HOST=
ELASTICACHE_REDIS_PORT=6379
ELASTICACHE_REDIS_PASSWORD=

# S3 Configuration
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# AI PROVIDERS
# =============================================================================
AI_PROVIDER=gemini
GEMINI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# =============================================================================
# VIDEO SERVICE CONFIGURATION
# =============================================================================
# Google Cloud TTS
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account-key.json

# Video Generation API Keys
RUNWAY_API_KEY=
PIKA_API_KEY=
STABILITY_API_KEY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_VIDEO_GENERATION=true
ENABLE_TTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false
ENABLE_SWAGGER_UI=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# FILE MANAGEMENT
# =============================================================================
MAX_FILE_SIZE_MB=50
CLEANUP_INTERVAL_HOURS=24
UPLOAD_PATH=./uploads
OUTPUT_PATH=./outputs

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_DIR=./logs

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGIN=http://localhost:3007
CORS_CREDENTIALS=true
ALLOWED_ORIGINS=http://localhost:3007,http://localhost:3000

# =============================================================================
# SECURITY HEADERS
# =============================================================================
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_NO_SNIFF=true
HELMET_XSS_FILTER=true

# =============================================================================
# HEALTH CHECK
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# CACHE
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# =============================================================================
# MONITORING (AWS)
# =============================================================================
METRICS_PORT=9090
TRACE_SAMPLE_RATE=0.1
CLOUDWATCH_GROUP=
CLOUDWATCH_STREAM=
XRAY_ENABLED=true
XRAY_SAMPLE_RATE=0.1
CLOUDTRAIL_ENABLED=true

# =============================================================================
# CDN
# =============================================================================
CDN_URL=
STATIC_ASSETS_URL=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@whatifgenerator.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
SESSION_MAX_AGE=86400000

# =============================================================================
# API DOCUMENTATION
# =============================================================================
API_DOCS_PATH=/api-docs
METRICS_PATH=/metrics