# What If Generator - Environment Configuration Template
# Copy this file to .env.local and update with your specific values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_NAME=what-if-generator
APP_VERSION=1.0.0

# =============================================================================
# SERVICE PORTS (FIXED - DO NOT CHANGE)
# =============================================================================
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
GENERATION_SERVICE_PORT=3002
HISTORY_SERVICE_PORT=3003
SHARING_SERVICE_PORT=3004
VIDEO_SERVICE_PORT=3005
SOCIAL_SERVICE_PORT=3006
FRONTEND_PORT=3007

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (User Service)
POSTGRES_DB=what_if_users
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# AWS RDS PostgreSQL (Test/Production)
RDS_POSTGRES_HOST=
RDS_POSTGRES_PORT=5432
RDS_POSTGRES_DB=what_if_users
RDS_POSTGRES_USER=postgres
RDS_POSTGRES_PASSWORD=

# MongoDB (Legacy - for migration only)
MONGODB_URI=mongodb://admin:admin123@localhost:27017/what_if_history?authSource=admin
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=what_if_history
MONGODB_USER=admin
MONGODB_PASSWORD=admin123

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS ElastiCache Redis (Test/Production)
ELASTICACHE_REDIS_HOST=
ELASTICACHE_REDIS_PORT=6379
ELASTICACHE_REDIS_PASSWORD=

# =============================================================================
# SERVICE URLS (INTERNAL COMMUNICATION)
# =============================================================================
USER_SERVICE_URL=http://localhost:3001
GENERATION_SERVICE_URL=http://localhost:3002
HISTORY_SERVICE_URL=http://localhost:3003
SHARING_SERVICE_URL=http://localhost:3004
VIDEO_SERVICE_URL=http://localhost:3005
SOCIAL_SERVICE_URL=http://localhost:3006

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3007
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=development

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# AI PROVIDERS
# =============================================================================
AI_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# VIDEO SERVICE PROVIDERS
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
RUNWAY_API_KEY=your-runway-api-key
PIKA_API_KEY=your-pika-api-key
STABILITY_API_KEY=your-stability-api-key

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 Configuration
S3_BUCKET=your-s3-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# CloudWatch Configuration
CLOUDWATCH_GROUP=what-if-generator
CLOUDWATCH_STREAM=api-gateway

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_VIDEO_GENERATION=true
ENABLE_TTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false
ENABLE_SWAGGER_UI=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# FILE MANAGEMENT
# =============================================================================
MAX_FILE_SIZE_MB=50
CLEANUP_INTERVAL_HOURS=24
UPLOAD_PATH=./uploads
OUTPUT_PATH=./outputs

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_DIR=./logs

# =============================================================================
# CORS & SECURITY
# =============================================================================
CORS_ORIGIN=http://localhost:3007
CORS_CREDENTIALS=true
ALLOWED_ORIGINS=http://localhost:3007,http://localhost:3000

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_NO_SNIFF=true
HELMET_XSS_FILTER=true

# =============================================================================
# HEALTH CHECK & MONITORING
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Metrics Configuration
METRICS_PORT=9090
TRACE_SAMPLE_RATE=0.1

# X-Ray Configuration
XRAY_ENABLED=true
XRAY_SAMPLE_RATE=0.1

# CloudTrail Configuration
CLOUDTRAIL_ENABLED=true

# CDN Configuration
CDN_URL=
STATIC_ASSETS_URL=

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@whatifgenerator.com

# =============================================================================
# PAYMENT CONFIGURATION (Optional)
# =============================================================================
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=