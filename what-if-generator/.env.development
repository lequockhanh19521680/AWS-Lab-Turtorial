# Development Environment Configuration
NODE_ENV=development
APP_NAME=what-if-generator
APP_VERSION=1.0.0

# Service Ports
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
GENERATION_SERVICE_PORT=3002
HISTORY_SERVICE_PORT=3003
SHARING_SERVICE_PORT=3004
VIDEO_SERVICE_PORT=3005
FRONTEND_PORT=3005

# Local Database Configuration
POSTGRES_DB=what_if_users
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Local DynamoDB (Docker)
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1

# Local Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Service URLs
USER_SERVICE_URL=http://localhost:3001
GENERATION_SERVICE_URL=http://localhost:3002
HISTORY_SERVICE_URL=http://localhost:3003
SHARING_SERVICE_URL=http://localhost:3004
VIDEO_SERVICE_URL=http://localhost:3005
SOCIAL_SERVICE_URL=http://localhost:3006

# Frontend
FRONTEND_URL=http://localhost:3005
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=development

# AI Provider
AI_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key-here

# Feature Flags
ENABLE_VIDEO_GENERATION=true
ENABLE_TTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=true
ENABLE_SWAGGER_UI=true

# Logging
LOG_LEVEL=debug
LOG_REQUESTS=true
LOG_ERRORS=true

# CORS
CORS_ORIGIN=http://localhost:3005
CORS_CREDENTIALS=true

# Monitoring (disabled for local development)
XRAY_ENABLED=false
CLOUDTRAIL_ENABLED=false
CLOUDWATCH_GROUP=