# ===========================================
# DEVELOPMENT ENVIRONMENT
# ===========================================

NODE_ENV=development
LOG_LEVEL=debug
LOG_REQUESTS=true

# Database URLs (Local)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
MONGODB_HOST=localhost
MONGODB_PORT=27017
REDIS_HOST=localhost
REDIS_PORT=6379

# Service URLs (Local Development)
USER_SERVICE_URL=http://localhost:3001
GENERATION_SERVICE_URL=http://localhost:3002
HISTORY_SERVICE_URL=http://localhost:3003
SHARING_SERVICE_URL=http://localhost:3004
VIDEO_SERVICE_URL=http://localhost:3005
SOCIAL_SERVICE_URL=http://localhost:3006

# Frontend URLs
FRONTEND_URL=http://localhost:3005
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=development

# Development Features
ENABLE_DEBUG_MODE=true
ENABLE_SWAGGER_UI=true
ENABLE_CORS_DEBUG=true

# Rate Limiting (More lenient for development)
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# Cache (Shorter TTL for development)
CACHE_TTL=300
CACHE_MAX_ITEMS=100

# Security (Less strict for development)
JWT_EXPIRES_IN=24h
HELMET_CSP_ENABLED=false
HELMET_HSTS_ENABLED=false