# What If Generator - Development Environment
NODE_ENV=development
APP_NAME=what-if-generator
APP_VERSION=1.0.0

# =============================================================================
# SERVICE PORTS (Fixed Architecture)
# =============================================================================
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
GENERATION_SERVICE_PORT=3002
HISTORY_SERVICE_PORT=3003
SHARING_SERVICE_PORT=3004
VIDEO_SERVICE_PORT=3005
SOCIAL_SERVICE_PORT=3006
FRONTEND_PORT=3007

# =============================================================================
# SERVICE URLs (Development)
# =============================================================================
USER_SERVICE_URL=http://localhost:3001
GENERATION_SERVICE_URL=http://localhost:3002
HISTORY_SERVICE_URL=http://localhost:3003
SHARING_SERVICE_URL=http://localhost:3004
VIDEO_SERVICE_URL=http://localhost:3005
SOCIAL_SERVICE_URL=http://localhost:3006
FRONTEND_URL=http://localhost:3007
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION (Local)
# =============================================================================
# PostgreSQL (User Service)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=what_if_users
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# DynamoDB Local
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1

# Redis Local
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# SECURITY (Development - Use secure values)
# =============================================================================
JWT_SECRET=dev-jwt-secret-key-change-this-in-production-12345
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# AI PROVIDERS (Add your API keys)
# =============================================================================
AI_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# =============================================================================
# VIDEO SERVICE (Development)
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account-key.json
RUNWAY_API_KEY=your-runway-api-key
PIKA_API_KEY=your-pika-api-key
STABILITY_API_KEY=your-stability-api-key

# =============================================================================
# FEATURE FLAGS (Development)
# =============================================================================
ENABLE_VIDEO_GENERATION=true
ENABLE_TTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=true
ENABLE_SWAGGER_UI=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# =============================================================================
# RATE LIMITING (Relaxed for Development)
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# =============================================================================
# FILE MANAGEMENT
# =============================================================================
MAX_FILE_SIZE_MB=50
CLEANUP_INTERVAL_HOURS=24
UPLOAD_PATH=./uploads
OUTPUT_PATH=./outputs

# =============================================================================
# LOGGING (Verbose for Development)
# =============================================================================
LOG_LEVEL=debug
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_DIR=./logs

# =============================================================================
# CORS (Permissive for Development)
# =============================================================================
CORS_ORIGIN=http://localhost:3007
CORS_CREDENTIALS=true
ALLOWED_ORIGINS=http://localhost:3007,http://localhost:3000,http://localhost:3005

# =============================================================================
# SECURITY HEADERS (Relaxed for Development)
# =============================================================================
HELMET_CSP_ENABLED=false
HELMET_HSTS_ENABLED=false
HELMET_NO_SNIFF=true
HELMET_XSS_FILTER=true

# =============================================================================
# HEALTH CHECK
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# CACHE
# =============================================================================
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# =============================================================================
# OAUTH (Development Keys)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# SESSION
# =============================================================================
SESSION_SECRET=dev-session-secret-key-change-this
SESSION_MAX_AGE=86400000

# =============================================================================
# API DOCUMENTATION
# =============================================================================
API_DOCS_PATH=/api-docs
METRICS_PATH=/metrics

# =============================================================================
# EMAIL (Use test SMTP for development)
# =============================================================================
EMAIL_USER=test@example.com
EMAIL_PASSWORD=test-password
EMAIL_FROM=noreply@whatifgenerator.local
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=1025