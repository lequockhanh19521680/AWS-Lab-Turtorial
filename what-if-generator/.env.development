# What If Generator - Development Environment Configuration
# This file contains development-specific settings

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_NAME=what-if-generator
APP_VERSION=1.0.0

# =============================================================================
# SERVICE PORTS (FIXED - DO NOT CHANGE)
# =============================================================================
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
GENERATION_SERVICE_PORT=3002
HISTORY_SERVICE_PORT=3003
SHARING_SERVICE_PORT=3004
VIDEO_SERVICE_PORT=3005
SOCIAL_SERVICE_PORT=3006
FRONTEND_PORT=3007

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Local Docker)
POSTGRES_DB=what_if_users
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MongoDB (Legacy - for migration only)
MONGODB_URI=mongodb://admin:admin123@localhost:27017/what_if_history?authSource=admin
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=what_if_history
MONGODB_USER=admin
MONGODB_PASSWORD=admin123

# DynamoDB Local
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1

# Redis Local
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# SERVICE URLS (INTERNAL COMMUNICATION)
# =============================================================================
USER_SERVICE_URL=http://localhost:3001
GENERATION_SERVICE_URL=http://localhost:3002
HISTORY_SERVICE_URL=http://localhost:3003
SHARING_SERVICE_URL=http://localhost:3004
VIDEO_SERVICE_URL=http://localhost:3005
SOCIAL_SERVICE_URL=http://localhost:3006

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3007
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ENVIRONMENT=development

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# AI PROVIDERS (Add your API keys)
# =============================================================================
AI_PROVIDER=gemini
GEMINI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# =============================================================================
# VIDEO SERVICE PROVIDERS (Add your API keys)
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=
RUNWAY_API_KEY=
PIKA_API_KEY=
STABILITY_API_KEY=

# =============================================================================
# AWS CONFIGURATION (Optional for development)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# =============================================================================
# FEATURE FLAGS (Development)
# =============================================================================
ENABLE_VIDEO_GENERATION=true
ENABLE_TTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=true
ENABLE_SWAGGER_UI=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# =============================================================================
# RATE LIMITING (Relaxed for development)
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# =============================================================================
# FILE MANAGEMENT
# =============================================================================
MAX_FILE_SIZE_MB=50
CLEANUP_INTERVAL_HOURS=24
UPLOAD_PATH=./uploads
OUTPUT_PATH=./outputs

# =============================================================================
# LOGGING (Verbose for development)
# =============================================================================
LOG_LEVEL=debug
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_DIR=./logs

# =============================================================================
# CORS & SECURITY (Permissive for development)
# =============================================================================
CORS_ORIGIN=http://localhost:3007
CORS_CREDENTIALS=true
ALLOWED_ORIGINS=http://localhost:3007,http://localhost:3000

# Security Headers (Relaxed for development)
HELMET_CSP_ENABLED=false
HELMET_HSTS_ENABLED=false
HELMET_NO_SNIFF=true
HELMET_XSS_FILTER=true

# =============================================================================
# HEALTH CHECK & MONITORING
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=100

# Metrics Configuration
METRICS_PORT=9090
TRACE_SAMPLE_RATE=1.0

# X-Ray Configuration (Disabled for local development)
XRAY_ENABLED=false
XRAY_SAMPLE_RATE=0.0

# CloudTrail Configuration (Disabled for local development)
CLOUDTRAIL_ENABLED=false