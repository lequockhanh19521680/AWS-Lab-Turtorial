# ===========================================
# PRODUCTION ENVIRONMENT
# ===========================================

NODE_ENV=production
LOG_LEVEL=info
LOG_REQUESTS=true

# Database URLs (AWS RDS/ElastiCache)
POSTGRES_HOST=${DB_HOST}
POSTGRES_PORT=5432
POSTGRES_DB=${DB_NAME}
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}
MONGODB_HOST=${MONGODB_HOST}
MONGODB_PORT=27017
MONGODB_DB=${MONGODB_DB}
MONGODB_USER=${MONGODB_USER}
MONGODB_PASSWORD=${MONGODB_PASSWORD}
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Service URLs (AWS Load Balancer)
USER_SERVICE_URL=https://api.whatifgenerator.com/user
GENERATION_SERVICE_URL=https://api.whatifgenerator.com/generation
HISTORY_SERVICE_URL=https://api.whatifgenerator.com/history
SHARING_SERVICE_URL=https://api.whatifgenerator.com/sharing
VIDEO_SERVICE_URL=https://api.whatifgenerator.com/video
SOCIAL_SERVICE_URL=https://api.whatifgenerator.com/social

# Frontend URLs
FRONTEND_URL=https://whatifgenerator.com
REACT_APP_API_URL=https://api.whatifgenerator.com
REACT_APP_ENVIRONMENT=production

# Production Configuration
ENABLE_DEBUG_MODE=false
ENABLE_SWAGGER_UI=false
ENABLE_CORS_DEBUG=false

# Rate Limiting (Production limits)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Cache (Production cache)
CACHE_TTL=3600
CACHE_MAX_ITEMS=10000

# Security (Production security)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_NO_SNIFF=true
HELMET_XSS_FILTER=true

# Production Features
ENABLE_VIDEO_GENERATION=true
ENABLE_TTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true

# Production API Keys (from AWS Secrets Manager)
GEMINI_API_KEY=${GEMINI_API_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
RUNWAY_API_KEY=${RUNWAY_API_KEY}
PIKA_API_KEY=${PIKA_API_KEY}
STABILITY_API_KEY=${STABILITY_API_KEY}

# AWS Configuration
AWS_REGION=${AWS_REGION}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
TRACE_SAMPLE_RATE=0.01

# File Storage (AWS S3)
S3_BUCKET=${S3_BUCKET}
S3_REGION=${AWS_REGION}
S3_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
S3_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# CDN Configuration
CDN_URL=https://cdn.whatifgenerator.com
STATIC_ASSETS_URL=https://assets.whatifgenerator.com