# Production Environment Configuration
NODE_ENV=production
APP_NAME=what-if-generator
APP_VERSION=1.0.0

# Service Ports
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
GENERATION_SERVICE_PORT=3002
HISTORY_SERVICE_PORT=3003
SHARING_SERVICE_PORT=3004
VIDEO_SERVICE_PORT=3005
FRONTEND_PORT=3005

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# AWS RDS PostgreSQL
RDS_POSTGRES_HOST=${RDS_POSTGRES_HOST}
RDS_POSTGRES_PORT=5432
RDS_POSTGRES_DB=what_if_users_production
RDS_POSTGRES_USER=postgres
RDS_POSTGRES_PASSWORD=${RDS_POSTGRES_PASSWORD}

# AWS DynamoDB
DYNAMODB_REGION=us-east-1

# AWS ElastiCache Redis
ELASTICACHE_REDIS_HOST=${ELASTICACHE_REDIS_HOST}
ELASTICACHE_REDIS_PORT=6379
ELASTICACHE_REDIS_PASSWORD=${ELASTICACHE_REDIS_PASSWORD}

# JWT
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Service URLs (ECS internal)
USER_SERVICE_URL=http://user-service:3001
GENERATION_SERVICE_URL=http://generation-service:3002
HISTORY_SERVICE_URL=http://history-service:3003
SHARING_SERVICE_URL=http://sharing-service:3004
VIDEO_SERVICE_URL=http://video-service:3005
SOCIAL_SERVICE_URL=http://social-service:3006

# Frontend
FRONTEND_URL=https://whatifgenerator.com
REACT_APP_API_URL=https://whatifgenerator.com
REACT_APP_ENVIRONMENT=production

# AI Provider
AI_PROVIDER=gemini
GEMINI_API_KEY=${GEMINI_API_KEY}

# Feature Flags
ENABLE_VIDEO_GENERATION=true
ENABLE_TTS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false
ENABLE_SWAGGER_UI=false

# Logging
LOG_LEVEL=warn
LOG_REQUESTS=false
LOG_ERRORS=true

# CORS
CORS_ORIGIN=https://whatifgenerator.com
CORS_CREDENTIALS=true

# Monitoring
XRAY_ENABLED=true
XRAY_SAMPLE_RATE=0.05
CLOUDTRAIL_ENABLED=true
CLOUDWATCH_GROUP=/aws/ecs/what-if-generator-production

# S3
S3_BUCKET=what-if-generator-production-assets
S3_REGION=us-east-1

# CDN
CDN_URL=https://d1234567890.cloudfront.net
STATIC_ASSETS_URL=https://d1234567890.cloudfront.net

# Security
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_NO_SNIFF=true
HELMET_XSS_FILTER=true

# Rate Limiting (stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false