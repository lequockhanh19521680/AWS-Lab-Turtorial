# Server Configuration
NODE_ENV=development
PORT=3004

# MongoDB Configuration
MONGODB_URI=mongodb://admin:admin123@localhost:27017/what_if_sharing?authSource=admin

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration (for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Service URLs
HISTORY_SERVICE_URL=http://localhost:3003
USER_SERVICE_URL=http://localhost:3001

# Frontend URL for sharing links
FRONTEND_URL=http://localhost:3005

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# Social Media API Keys (for enhanced sharing)
FACEBOOK_APP_ID=your-facebook-app-id
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# URL Shortener Configuration
URL_SHORTENER_DOMAIN=whatif.ly
URL_SHORTENER_API_KEY=your-url-shortener-api-key

# Moderation Settings
AUTO_MODERATE_REPORTS=true
REPORT_THRESHOLD_FOR_HIDE=5
ADMIN_EMAIL=admin@whatifgenerator.com

# Analytics
ENABLE_SHARING_ANALYTICS=true

# QR Code Settings
QR_CODE_SIZE=200
QR_CODE_ERROR_CORRECTION=M

# Logging
LOG_LEVEL=info