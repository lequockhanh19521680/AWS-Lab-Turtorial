# Server Configuration
PORT=3005
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3005

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# User Service Configuration
USER_SERVICE_URL=http://localhost:3001

# Google Cloud Configuration for TTS
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id

# Video Generation API Keys
RUNWAY_API_KEY=your-runway-api-key
PIKA_API_KEY=your-pika-api-key
STABILITY_API_KEY=your-stability-api-key

# Video Generation Configuration
ENABLE_VIDEO_GENERATION=true
ENABLE_TTS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Management
MAX_FILE_SIZE_MB=50
CLEANUP_INTERVAL_HOURS=24

# Logging Configuration
LOG_LEVEL=info
LOG_REQUESTS=true

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs

# Metrics
ENABLE_METRICS=true
METRICS_PATH=/metrics

# Valid API Keys (comma-separated)
VALID_API_KEYS=your-api-key-1,your-api-key-2

# Video Generation Timeouts
VIDEO_GENERATION_TIMEOUT_MS=300000
TTS_TIMEOUT_MS=30000

# Cleanup Configuration
DEFAULT_CLEANUP_AGE_HOURS=24
MAX_CLEANUP_AGE_HOURS=168