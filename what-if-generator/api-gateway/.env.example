# Server Configuration
NODE_ENV=development
PORT=3000

# Service URLs
USER_SERVICE_URL=http://localhost:3001
GENERATION_SERVICE_URL=http://localhost:3002
HISTORY_SERVICE_URL=http://localhost:3003
SHARING_SERVICE_URL=http://localhost:3004

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Redis Configuration for caching and rate limiting
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Caching
CACHE_TTL_SECONDS=300
ENABLE_CACHE=true

# CORS Configuration
FRONTEND_URL=http://localhost:3005
ALLOWED_ORIGINS=http://localhost:3005,http://localhost:3000

# Proxy Configuration
PROXY_TIMEOUT=30000
PROXY_RETRY_ATTEMPTS=3
PROXY_RETRY_DELAY=1000

# Load Balancing
ENABLE_LOAD_BALANCING=false
HEALTH_CHECK_INTERVAL=30000

# Security
ENABLE_API_KEY_AUTH=false
API_KEY_HEADER=X-API-Key

# Logging
LOG_LEVEL=info
LOG_REQUESTS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PATH=/metrics

# API Documentation
API_DOCS_PATH=/api-docs
ENABLE_API_DOCS=true